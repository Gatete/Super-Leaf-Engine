            <string>///Paragoomba logic

//If the goomba is ascending.
if (flying = 1) {

    //Set the vertical speed.
    vspeed = -2;
    gravity = 0;
    
    //Stop when nearby the top boundary.
    if (y &lt; view_yview[0]+48) {
    
        //Follow Mario
        flying = 2;
        
        //Set the vertical speed
        vspeed = 0.25;
        
        //Do stuff
        alarm[1] = 24;
        alarm[2] = 48;
        
        //End flight
        alarm[3] = 240;
    }
}

//Otherwise, if the goomba ascended enough.
else if (flying == 2) {

    //If Mario does exist, follow him.
    if (instance_exists(obj_mario)) {
    
        if (obj_mario.x &lt; x) {
        
            hspeed -= 0.05;
            if (hspeed &lt; -2)
                hspeed = -2;
        }
        else if (obj_mario.x &gt; x) {
        
            hspeed += 0.05;
            if (hspeed &gt; 2)
                hspeed = 2;
        }
    }
    
    //Otherwise, follow the level manager.
